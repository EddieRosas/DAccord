<!DOCTYPE html>
<html>
  <head>
    <title>D'Accord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="shortcut icon" href="<%= image_url('favicon/daccord-icon.svg') %>" />

    <script src="https://kit.fontawesome.com/82e90f5064.js" SameSite="none" crossorigin="anonymous"></script>
    
    <script type='text/javascript'>
      window.android = "<%= image_url('splash/android.svg') %>";
      window.bomb = "<%= image_url('splash/bomb.svg') %>";
      window.circle = "<%= image_url('splash/circle.svg') %>";
      window.circlefill = "<%= image_url('splash/circlefill.svg') %>";
      window.coin = "<%= image_url('splash/coin.svg') %>";
      window.controller = "<%= image_url('splash/controller.svg') %>";
      window.desktop = "<%= image_url('splash/desktop.svg') %>";
      window.disc = "<%= image_url('splash/disc.svg') %>";
      window.gamepak = "<%= image_url('splash/gamepak.svg') %>";
      window.headphones = "<%= image_url('splash/headphones.svg') %>";
      window.icon = "<%= image_url('splash/icon.svg') %>";
      window.iconpng = "<%= image_url('session/icon.png') %>";
      window.iphone = "<%= image_url('splash/iphone.svg') %>";
      window.laptop = "<%= image_url('splash/laptop.svg') %>";
      window.logo = "<%= image_url('splash/daccord-logo.png') %>";
      window.logosvg = "<%= image_url('session/daccord-logo.svg') %>";
      window.mariobox = "<%= image_url('splash/mariobox.svg') %>";
      window.potion = "<%= image_url('splash/potion.svg') %>";
      window.sessionbg = "<%= image_url('session/sessionbg.jpg') %>";
      window.square = "<%= image_url('splash/square.svg') %>";
      window.triangle = "<%= image_url('splash/triangle.svg') %>";
      window.x = "<%= image_url('splash/x.svg') %>";
      window.atMe = "<%= image_url('main/@me-link-icon.png') %>";
      window.joinServerIcon = "<%= image_url('main/join-server-icon.svg') %>";
      window.createServerIcon = "<%= image_url('main/create-server-icon.svg') %>"; 
      window.backToPrevIcon= "<%= image_url('main/back-to-prev-icon.svg') %>"; 
    </script>

     <% if current_user %>
      <script>
        window.currentUser = {
          id: <%= current_user.id %>,
          username: '<%= current_user.username %>',
        }
      </script>
    <% end %>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>
